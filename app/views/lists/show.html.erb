<% if @list.image.attached? %>
  <div class="banner"
    style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.image.key, height: 300, crop: :fill %>')"
  >
<% end %>
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="container mt">
<% @list.movies.each do |movie| %>
  <div class="card" style="width: 18rem;">
    <%# <img src="..." class="card-img-top" alt="..."> %>
    <div class="card-body">
      <p class="card-text"><strong><%= movie.title %></strong></p>
      <p class="card-text"><%= movie.overview %></p>

    </div>
  </div>
<% end %>

