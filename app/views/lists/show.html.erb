<%# BANNER %>

<% if @list.image.attached? %>
  <div class="banner"
    style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.image.key, height: 300, crop: :fill %>')">
<% end %>

  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>

<%# CARDS %>

<div class="container mt-4 mb-5">
  <div class="row row-cols-3">
    <% @list.movies.each do |movie| %>
    <div class="col d-flex flex-wrap">
      <div class="card">
        <%= image_tag movie.poster_url, class: "card-img-top ", alt: "poster" %>
        <div class="card-body">
          <h5 class="card-text fw-bold"><%= movie.title %></h5>
          <p class="card-text"><%= movie.overview %></p>
          <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
          <div class="d-flex justify-content-between align-items-center">
            <figcaption class="blockquote-footer mt-2">
            <%= bookmark.comment %>
            </figcaption>
            <%= link_to bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Supprimer ?" } do %>
            <i class="fa-solid fa-trash mb-1"></i>
            <% end %>
          </div>
        </div>
      </div>
      </div>
    <% end %>
    </div>

<%# CTA %>

  <%= link_to "Ajouter un film", new_list_bookmark_path(@list), class: "btn btn-primary mt-4" %>
  <%= link_to "Voir toutes les listes", lists_path, class: "btn btn-outline-secondary mt-4" %>
</div>
