
<div class="banner"
  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.image.key, height: 300, crop: :fill %>')"
>
  <div class="container">
    <h1 class="text-align-center"><%= @list.name %></h1>
  </div>
</div>

<div class="container">
  <ul> <% @list.movies.each do |movie| %>
    <li><strong><%= movie.title %></strong> | <%= movie.overview %>
    <%#= link_to "X", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Supprimer ?" } %>
    </li>
    <% end %>
    </ul>

  <%= link_to "Ajouter un film", new_list_bookmark_path(@list), class: "btn btn-primary" %>
  <%= link_to "Voir toutes les listes", lists_path, class: "btn btn-outline-secondary" %>
</div>
