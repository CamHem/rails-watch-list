
<div class="banner"
  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1513106580091-1d82408b8cd6?q=80&w=2352&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D, height: 300, crop: :fill %>')"
>
  <div class="container">
    <h1>Mes listes de film</h1>
  </div>
</div>


<div class="container">
  <div class="cards">
    <% @lists.each do |list| %>
    <% if list.image.attached? %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.image.key, height: 300, crop: :fill %>')">
    <% end %>
      <p><%= link_to list.name, list_path(list), class: "card-title" %></p>
    </div>
    <% end %>
  </div>

  <%= link_to "Create a new list", new_list_path, class: "btn btn-primary" %>
</div>
